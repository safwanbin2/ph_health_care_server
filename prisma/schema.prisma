generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Models
model User {
  id String @id @default(uuid())
  email String @unique
  password String
  role UserRole
  needPasswordChange Boolean @default(true)
  status UserStatus
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}


// Enums
enum UserRole {
  SUPER_ADMIN
  ADMIN
  DOCTOR
  PATIENT
}
enum UserStatus {
  ACTIVE
  BLOCKED 
}